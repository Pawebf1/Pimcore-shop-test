<div class="d-flex justify-content-center">
    <div class='row'>
        {% for i in pimcore_iterate_block(pimcore_block('teaserblock')) %}
            <div class="card text-center" style="width: 15rem;">
                <a href='/'>
                    {{ pimcore_renderlet('product' ~ i, {
                        'controller': 'App\\Controller\\ProductController::productTeaserAction',
                        'height': 'auto',
                        'title': 'Drag an product object here'
                    }) }}
                </a>
            </div>
        {% endfor %}
    </div>
</div>
